void fragment() {
	vec3 noise_color;
	int interval_id = int(floor(TIME / interval));
	float current_step = clamp(abs(TIME-(float(interval_id)*interval)), 0, 1);
	int phase = 1;
	if (interval_id+1 % 3 == 0) {
		phase = 2;
	} else if (interval_id % 3 == 0){
		phase = 0;
	}
	if (phase == 0) {
		//noise_color = (texture(noise, UV).rgb*current_step)+(texture(noise2, UV).rgb*(1.0-current_step));
		noise_color = texture(noise, UV).rgb;
	} else if (phase == 1) {
		//noise_color = (texture(noise2, UV).rgb*current_step)+(texture(noise3, UV).rgb*(1.0-current_step));
		noise_color = texture(noise2, UV).rgb;
	} else {
		//noise_color = (texture(noise3, UV).rgb*current_step)+(texture(noise, UV).rgb*(1.0-current_step));
		noise_color = texture(noise3, UV).rgb;
	}
	COLOR = texture(TEXTURE, UV);
	COLOR.rgb *= noise_color*strength;
}"

